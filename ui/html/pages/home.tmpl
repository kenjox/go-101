{{define "title"}}Home{{ end }}

{{define "main"}}
    <h2>Latest Snippets</h2>
    {{if .Snippets}}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody>
                {{range .Snippets}}
                    <tr>
                        <td>{{.ID}}</td>
                        <td><a href="/snippet/view/{{.ID}}">{{.Title}}</a></td>
                        <td>{{.Content}}</td>
                    </tr>
                {{end}}
            </tbody>
        </table>
    {{else}}
        <p>No snippet(s) to show</p>
    {{end}}
{{ end }}
